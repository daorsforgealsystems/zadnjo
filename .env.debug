# Netlify Build Debug Configuration
NETLIFY_DEBUG=true
BUILD_TIMING=true
TRACK_RESOURCES=true
VITE_DEBUG_BUILD=true
NODE_OPTIONS="--max-old-space-size=4096"

# Performance Monitoring
ENABLE_PERF_METRICS=true
LOG_MEMORY_USAGE=true
GENERATE_BUILD_REPORT=true

# Bundle Analysis
ANALYZE_BUNDLE=true
TRACK_CHUNK_SIZES=true
MONITOR_DEPENDENCIES=true

# Caching
CACHE_OPTIMIZATION=true
PRE_WARM_CACHE=true
BUNDLE_CACHING=true

# Logging
LOG_LEVEL=verbose
LOG_FORMAT=json
SAVE_LOGS_TO_FILE=true
LOG_FILE=build-debug.log