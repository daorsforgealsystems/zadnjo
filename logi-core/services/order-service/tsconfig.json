{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "ignoreDeprecations": "6.0",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "../../shared/*": ["../shared/*"]
    }
  },
  "include": ["src/**/*"]
}